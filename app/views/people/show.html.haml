		%script{src: "assets/js/hover.zoom.js"}
		%script{src: "assets/js/hover.zoom.conf.js"}
#ww
	.container
		.row
			.col-lg-8.col-lg-offset-2.centered
				%img
				= image_tag @person.person_photo.url
				%h1 #{@person.name}
				%p Hello everybody. I'm #{@person.name}, task-doer extraordinaire.  Check out all the amazing tasks I've completed since joining &Done!
				= button_to "Delete Profile", "/people/#{@person.id}", {:action => "delete", :method => :delete}
				=button_to "Edit Profile", "/people/#{@person.id}/edit", {:method => :get}
          
.container.pt
	.row.mt.centered
		- @tasks.each do |t|
			-if t.complete 
				.button-show
					%button.btn.btn-default
						Name:
						= t.name
						%br
						Due Date:
						= t.due_date
						%br
						Description:
						= t.description
						%br
						Completed?:
						-if t.complete
							This Task Has Been Completed
						-else 
							This Task Has Not Been Completed
						%br
						=link_to "Edit this task", "/tasks/#{t.id}/edit"
						%br
			-else 
				.button-show
					%button.btn.btn-danger
						Name:
						= t.name
						%br
						Due Date:
						= t.due_date
						%br
						Description:
						= t.description
						%br
						Completed?:
						-if t.complete
							This Task Has Been Completed
						-else 
							This Task Has Not Been Completed
						%br
						=link_to "Edit this task", "/tasks/#{t.id}/edit"	
						%br

